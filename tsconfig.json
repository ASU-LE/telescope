{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2021",
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "./node_modules",
        "./src/client",
        "./dist"
    ]
}